{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "build"
    },
    {
      "type": "shell",
      "label": "watch",
      "command": "npm run dev",
      "args": [
        "--",
        "--watch"
      ],
      "problemMatcher": [
        "$tsc",
        "$eslint-stylish"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "watch-prod",
      "command": "npm run build",
      "args": [
        "--",
        "--watch"
      ],
      "problemMatcher": [
        "$tsc",
        "$eslint-stylish"
      ]
    }
  ]
}