{
  "compilerOptions": {
    "outDir": "./built/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "data/*": [
        "data/*"
      ],
      "components/*": [
        "components/*"
      ],
      "utils/*": [
        "utils/*"
      ],
      "store/*": [
        "store/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue"
  ]
}